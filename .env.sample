# ===========================================
# MYSQL CONFIGURATION
# ===========================================
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=pet_shelter

# For backend connection
# LOCAL: jdbc:mysql://mysql:3306/pet_shelter (use service name)
# PRODUCTION: jdbc:mysql://VM1_IP:3306/pet_shelter (use actual IP)
JDBC_DATABASE_URL=jdbc:mysql://mysql:3306/pet_shelter
JDBC_USERNAME=root
JDBC_PASSWORD=rootpassword123

# ===========================================
# MONGODB CONFIGURATION
# ===========================================
MONGODB_USERNAME=mongouser
MONGODB_PASSWORD=mongopass123
MONGODB_DATABASE=pet_shelter

# For backend connection
# LOCAL: mongodb://mongouser:mongopass123@mongodb:27017/pet_shelter?authSource=admin
# PRODUCTION: mongodb://mongouser:mongopass123@VM1_IP:27017/pet_shelter?authSource=admin
MONGODB_URI=mongodb://mongouser:mongopass123@mongodb:27017/pet_shelter?authSource=admin

# ===========================================
# NEO4J CONFIGURATION
# ===========================================
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4jpass123

# For backend connection
# LOCAL: bolt://neo4j:7687 (use service name)
# PRODUCTION: bolt://VM1_IP:7687 (use actual IP)
NEO4J_URI=bolt://neo4j:7687

# ===========================================
# JWT SECRETS (CHANGE THESE IN PRODUCTION!)
# ===========================================
JWT_ACCESS_SECRET=this_is_a_very_long_random_access_secret_which_is_long_enough_123456
JWT_REFRESH_SECRET=this_is_a_very_long_random_refresh_secret_which_is_long_enough_654321

# ===========================================
# CORS CONFIGURATION
# ===========================================
# LOCAL: http://localhost
# PRODUCTION: http://VM2_IP or your domain
CORS_ORIGINS=http://localhost

# ===========================================
# BUILD ARGUMENTS
# ===========================================
# For frontend build
# LOCAL: http://localhost/api
# PRODUCTION: http://VM2_IP/api (update with actual IP)
VITE_PROD_API_BASE_URL=http://localhost/api
